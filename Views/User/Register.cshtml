@model FundingApplication.DTO.RegisterDTO

<h1>Create Account</h1>
<form class="row" asp-controller="User" asp-action="register" method="post">
    <div>
        <label class="col-sm-2">Name</label>
        <input asp-for="Name" class="col-sm-10" />
        <span asp-validation-for="Name"></span>
    </div>
    <div>
        <label class="col-sm-2">Email</label>
        <input asp-for="Email" class="col-sm-10" />
    </div>
    <div>
        <label class="col-sm-2">Password</label>
        <input asp-for="Password" class="col-sm-10" />
    </div>
    <div>
        <label class="col-sm-2">Age</label>
        <input asp-for="age" class="col-sm-10" />
    </div>
    <div>
        <label class="col-sm-2">Phone</label>
        <input asp-for="Phone" class="col-sm-10" />
    </div>
    
    <div>
        <br />
        <button type="submit" class="btn btn-info ">Submit</button>
    </div>
    
</form>
